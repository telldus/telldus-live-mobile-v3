<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blue">

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/sensorBack">

        <ImageView
            android:id="@+id/backsensor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backarrow"
            android:tint="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="15dp"/>
    </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/telldus_1"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/lightGray">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/telldushome">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/testTextSensor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add sensor widget"
                    android:textSize="33sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="27sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/chooseSettingSensor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose settings for your widget"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:paddingLeft="15dp"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/loadingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="22sp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center|center"
                    android:textColor="@color/orange"/>
                <LinearLayout
                    android:id="@+id/screenCover"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sensorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Sensor:"
                        android:textSize="16sp"
                        android:textColor="@color/darkGray"
                        android:layout_marginTop="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="0.38"
                            android:background="@drawable/shape_left"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvIcon1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="50sp"
                                android:textColor="#FFFFFF"
                                android:text="@string/sensor"
                                android:fontFamily="@font/telldusicons"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btSelectSensor"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="0.62"
                            android:background="@drawable/shape_right"
                            android:orientation="vertical"
                            android:layout_gravity="left"
                            android:paddingVertical="15dp"
                            android:paddingHorizontal="10dp">

                            <TextView
                                android:id="@+id/txtSensorName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Select sensor"
                                android:textSize="22sp"
                                android:layout_gravity="center"
                                android:textColor="@color/orange"/>

                            <TextView
                                android:id="@+id/txtSensorHint"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tap to select sensor"
                                android:textSize="12sp"
                                android:layout_gravity="center"
                                android:textColor="@color/darkGray"/>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/valueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Value to display:"
                        android:textSize="16sp"
                        android:textColor="@color/darkGray"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="0.38"
                            android:background="@drawable/shape_left"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/imgSensorTypeEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:background="@drawable/penscg"
                                android:textColor="#FFFFFF"/>
                            <TextView
                                android:id="@+id/imgSensorType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="50sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="@font/telldusicons"
                                android:visibility="gone"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btSelectDisplayItem"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="0.62"
                            android:background="@drawable/shape_right"
                            android:orientation="vertical"
                            android:layout_gravity="left"
                            android:paddingVertical="15dp"
                            android:paddingHorizontal="10dp">

                            <TextView
                                android:id="@+id/txtSensorDataName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Select value"
                                android:textSize="22sp"
                                android:textColor="@color/orange"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/txtSensorDataHint"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tap to change value to display"
                                android:textSize="12sp"
                                android:textColor="@color/darkGray"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/settingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Settings:"
                        android:layout_marginBottom="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/darkGray"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shape">

                        <Switch
                            android:id="@+id/switch_background"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Transparent Background"
                            android:textSize="14sp"
                            android:textColor="@color/gray"
                            android:theme="@style/SCBSwitch"/>

                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/btSelectPollInterval"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.62"
                            android:background="@drawable/shape"
                            android:orientation="horizontal"
                            android:paddingVertical="14dp"
                            android:paddingHorizontal="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center|center"
                            android:gravity="center|center">

                        <TextView
                            android:id="@+id/labelSelectPoll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Update every 10 minutes"
                            android:textSize="14sp"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"
                            android:textColor="@color/gray"/>

                        <TextView
                            android:id="@+id/iconDropDown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="down"
                            android:textSize="14sp"
                            android:textColor="@color/darkGray"
                            android:gravity="center|right"
                            android:layout_gravity="center|right"
                            android:fontFamily="@font/telldusicons"
                            android:layout_marginRight="11dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="30dp"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/btAdd"
                            android:layout_width="220sp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/white"
                            android:background="@drawable/orangebutton"
                            android:text="@string/confirm"/>

                        <Button
                            android:id="@+id/button_cancel"
                            android:layout_width="220sp"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/white"
                            android:background="@drawable/redbutton"
                            android:text="CANCEL"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blue">

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/sensorBack">

        <ImageView
            android:id="@+id/backsensor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backarrow"
            android:tint="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="15dp"/>
    </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/telldus_1"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/lightGray"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.21"
            android:background="@drawable/headerimage">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">

            <TextView
                android:id="@+id/testTextSensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add sensor widget"
                android:textSize="33sp"
                android:layout_gravity="center"
                android:layout_marginLeft="27sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/chooseSettingSensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose settings for your widget"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:paddingLeft="15dp"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.79"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sensorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Sensor:"
                android:textSize="16sp"
                android:textColor="@color/darkGray"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.38"
                    android:background="@drawable/shape_left"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="10dp"
                        android:src="@drawable/sensor"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btSelectSensor"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.62"
                    android:background="@drawable/shape_right"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/txtSensorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="10dp"
                        android:text="Select sensor"
                        android:textSize="22sp"
                        android:textColor="@color/orange"/>

                    <TextView
                        android:id="@+id/txtSensorHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Tap to select sensor"
                        android:textSize="12sp"
                        android:textColor="@color/darkGray"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/valueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Value to display:"
                android:textSize="16sp"
                android:textColor="@color/darkGray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.38"
                    android:background="@drawable/shape_left"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgSensorType"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="10dp"
                        android:src="@drawable/temperature"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btSelectDisplayItem"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.62"
                    android:background="@drawable/shape_right"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/txtSensorDataName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Select data item"
                        android:textSize="22sp"
                        android:textColor="@color/orange"/>

                    <TextView
                        android:id="@+id/txtSensorDataHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Tap to change value to display"
                        android:textSize="12sp"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/darkGray"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/settingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Settings:"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:textColor="@color/darkGray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape">

                <Switch
                    android:id="@+id/switch_background"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Transparent Background"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/btAdd"
                    android:layout_width="220sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/orangebutton"
                    android:text="@string/confirm"/>

                <Button
                    android:id="@+id/button_cancel"
                    android:layout_width="220sp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/redbutton"
                    android:text="CANCEL"/>

            </LinearLayout>

<!--             <EditText
                android:id="@+id/etUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="URL"
                android:inputType="text"/> -->

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</LinearLayout>

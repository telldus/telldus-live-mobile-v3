<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="@dimen/widget_margin">

    <LinearLayout
        android:id="@+id/iconWidget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_widget"
        android:layout_gravity="center"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/txtWidgetTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginBottom="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center|center"
            android:gravity="center|center"
            android:id="@+id/widget_content_cover">
            <LinearLayout
                android:id="@+id/leftMarginBell"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grayligt"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/bellCover"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:layout_gravity="center|center"
                android:gravity="center|center"
                android:visibility="gone">
                <TextView
                    android:id="@+id/bell"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="26sp"
                    android:layout_gravity="center|center"
                    android:gravity="center|center"
                    android:fontFamily="@font/telldusicons"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/leftMarginUp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grayligt"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/upCover"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:layout_gravity="center|center"
                android:gravity="center|center"
                android:visibility="gone">
                <TextView
                    android:id="@+id/uparrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26sp"
                    android:layout_gravity="center|center"
                    android:gravity="center|center"
                    android:fontFamily="@font/telldusicons"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/leftMarginDown"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grayligt"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/downCover"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:layout_gravity="center|center"
                android:gravity="center|center"
                android:visibility="gone">
                <TextView
                    android:id="@+id/downarrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26sp"
                    android:layout_gravity="center|center"
                    android:gravity="center|center"
                    android:fontFamily="@font/telldusicons"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/leftMarginStop"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grayligt"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/stopCover"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:layout_gravity="center|center"
                android:gravity="center|center"
                android:visibility="gone">
                <TextView
                    android:id="@+id/stopicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26sp"
                    android:layout_gravity="center|center"
                    android:gravity="center|center"
                    android:fontFamily="@font/telldusicons"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/leftMarginOff"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grayligt"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/offCover"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:layout_gravity="center|center"
                android:gravity="center|center"
                android:visibility="gone">
                <TextView
                    android:id="@+id/iconOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26sp"
                    android:layout_gravity="center|center"
                    android:gravity="center|center"
                    android:fontFamily="@font/telldusicons"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/leftMarginDim25"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grayligt"
                android:visibility="gone"/>
            <FrameLayout
                android:id="@+id/dimmer25Cover"
                android:layout_width="0dip"
                android:layout_weight="0.2"
                android:layout_height="match_parent"
                android:layout_gravity="center|center"
                android:gravity="center|center"
                android:visibility="gone">
                <TextView
                    android:id="@+id/iconCheck25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="checkmark"
                    android:layout_gravity="center|center"
                    android:gravity="center|center"
                    android:fontFamily="@font/telldusicons"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_circular_background_green_small"
                    android:visibility="gone"/>
                <LinearLayout
                    android:id="@+id/dimmer25CoverLinear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center"
                    android:gravity="center|center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/dimmer25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:fontFamily="@font/telldusicons"
                        android:textColor="@color/white"
                        android:background="@android:color/transparent"/>
                    <TextView
                        android:id="@+id/txtDimmer25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25%"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/orange"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/leftMarginDim50"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grayligt"
                android:visibility="gone"/>
            <FrameLayout
                android:id="@+id/dimmer50Cover"
                android:layout_width="0dip"
                android:layout_weight="0.2"
                android:layout_height="match_parent"
                android:layout_gravity="center|center"
                android:gravity="center|center"
                android:visibility="gone">
                <TextView
                    android:id="@+id/iconCheck50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="checkmark"
                    android:layout_gravity="center|center"
                    android:gravity="center|center"
                    android:fontFamily="@font/telldusicons"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_circular_background_green_small"
                    android:visibility="gone"/>
                <LinearLayout
                    android:id="@+id/dimmer50CoverLinear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center"
                    android:gravity="center|center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/dimmer50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:fontFamily="@font/telldusicons"
                        android:textColor="@color/white"
                        android:background="@android:color/transparent"/>
                    <TextView
                        android:id="@+id/txtDimmer50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50%"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/orange"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/leftMarginDim75"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grayligt"
                android:visibility="gone"/>
            <FrameLayout
                android:id="@+id/dimmer75Cover"
                android:layout_width="0dip"
                android:layout_weight="0.2"
                android:layout_height="match_parent"
                android:layout_gravity="center|center"
                android:gravity="center|center"
                android:visibility="gone">
                <TextView
                    android:id="@+id/iconCheck75"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="checkmark"
                    android:layout_gravity="center|center"
                    android:gravity="center|center"
                    android:fontFamily="@font/telldusicons"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_circular_background_green_small"
                    android:visibility="gone"/>
                <LinearLayout
                    android:id="@+id/dimmer75CoverLinear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center"
                    android:gravity="center|center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/dimmer75"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:fontFamily="@font/telldusicons"
                        android:textColor="@color/white"
                        android:background="@android:color/transparent"/>
                    <TextView
                        android:id="@+id/txtDimmer75"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="75%"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/orange"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/leftMarginOn"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grayligt"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/onCover"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:layout_gravity="center|center"
                android:gravity="center|center"
                android:visibility="gone">
                <TextView
                    android:id="@+id/iconOn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26sp"
                    android:layout_gravity="center|center"
                    android:gravity="center|center"
                    android:fontFamily="@font/telldusicons"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/thermoCover"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center"
    android:gravity="center|center"
    android:visibility="gone"
    android:elevation="5dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="5dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center|center"
        android:gravity="center|center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center|center"
            android:gravity="center|center">
            <ImageView
                android:id="@+id/heaticon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center"
                android:gravity="center|center"
                android:layout_marginLeft="-5dp"/>
            <LinearLayout
                android:id="@+id/thermoTextCover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:layout_gravity="center|center"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginLeft="0dp">
                <TextView
                    android:id="@+id/txtLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:gravity="left"
                    android:maxLines="1"
                    android:layout_centerInParent="true"
                    android:textColor="@color/brandSecondary"
                    android:lineSpacingExtra="0dp"/>
                <LinearLayout
                    android:id="@+id/thermoValueCover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:layout_gravity="left">
                    <TextView
                        android:id="@+id/txtValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:layout_centerInParent="true"
                        android:textColor="@color/brandSecondary"
                        android:lineSpacingExtra="0dp"
                        android:includeFontPadding="false"/>
                    <TextView
                        android:id="@+id/txtUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:layout_centerInParent="true"
                        android:textColor="@color/brandSecondary"
                        android:lineSpacingExtra="0dp"
                        android:includeFontPadding="false"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/thermoCurrValueCover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/txtCurrValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:gravity="left"
                        android:maxLines="1"
                        android:layout_centerInParent="true"
                        android:textColor="@color/brandSecondary"
                        android:lineSpacingExtra="0dp"
                        android:includeFontPadding="false"/>
                    <TextView
                        android:id="@+id/txtCurrUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:gravity="left"
                        android:maxLines="1"
                        android:layout_centerInParent="true"
                        android:textColor="@color/brandSecondary"
                        android:lineSpacingExtra="0dp"
                        android:includeFontPadding="false"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/flashing_indicator_thermo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:gravity="right|top"
            android:layout_gravity="right|top"
            android:visibility="gone">
            <ViewFlipper
                android:measureAllChildren="true"
                android:flipInterval="800"
                android:autoStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:id="@+id/flash_view_thermo"/>
                <LinearLayout
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:background="@android:color/transparent"/>
            </ViewFlipper>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dimmer25Cover"
    android:layout_width="0dip"
    android:layout_weight="0.2"
    android:layout_height="match_parent"
    android:layout_gravity="center|center"
    android:gravity="center|center"
    android:visibility="gone"
    android:elevation="5dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="5dp">
    <FrameLayout
        android:id="@+id/flashing_indicator_dim25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:gravity="left|top"
        android:layout_gravity="left|top"
        android:visibility="gone">
        <ViewFlipper
            android:measureAllChildren="true"
            android:flipInterval="800"
            android:autoStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:id="@+id/flash_view_dim25"/>
            <LinearLayout
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@android:color/transparent"/>
        </ViewFlipper>
    </FrameLayout>
    <ImageView
        android:id="@+id/iconCheck25"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|center"
        android:gravity="center|center"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/dimmer25CoverLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center"
        android:gravity="center|center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/dimmer25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center"
            android:gravity="center|center"
            android:layout_marginTop="-2dp"/>
        <TextView
            android:id="@+id/txtDimmer25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25%"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:layout_marginTop="-2dp"/>
    </LinearLayout>
</FrameLayout>